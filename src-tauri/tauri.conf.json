{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wallpaper Generator",
  "version": "0.1.0",
  "identifier": "com.srinternet.wallpapergenerator",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Wallpaper Generator",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "title": "Starting...",
        "width": 400,
        "height": 200,
        "decorations": false,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}

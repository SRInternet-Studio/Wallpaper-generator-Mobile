{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "notification:default",
    "log:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://**" },
        { "url": "https://**" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$PICTURE/**" }
      ]
    }
  ]
}

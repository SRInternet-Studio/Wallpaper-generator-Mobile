{
  "$schema": "../gen/schemas/android-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "notification:default",
    "log:default",
    {
      "identifier": "clipboard-manager:allow-write-text"
    },
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://**" },
        { "url": "https://**" }
      ]
    },
    "sharesheet:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}
